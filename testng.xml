        <classes>
            <class name="MyRunner.TestRunner" />
        </classes>
    </test> <!-- Test -->
    <test name="Cucumber Demo Test - MacOS" annotations="JDK" preserve-order="true">
        <parameter name="browser" value="Safari" />
